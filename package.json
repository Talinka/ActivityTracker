{
  "name": "exercise-planner",
  "version": "1.0.0",
  "description": "Sport activity tracking PWA",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "docker:build": "docker build -f docker/Dockerfile -t exercise-planner:latest .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/data exercise-planner:latest",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up --build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0"
  },
  "keywords": [
    "exercise",
    "training",
    "tracker",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vitejs/plugin-legacy": "^7.2.1"
  }
}
